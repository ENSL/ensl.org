<h1>Listing maps</h1>

<table class="data">
  <tr>
    <th>Name</th>
    <th>Download</th>
    <th>Options</th>
  </tr>

  <% @maps.each do |map| %>
    <tr class="<%= cycle('even', 'odd') %>">
      <td><%= namelink map %></td>
      <td><%= h map.download %></td>
      <td>
        <%= link_to 'Edit', edit_map_path(map) %>
        <%= link_to 'Destroy', map, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New map', new_map_path %>
