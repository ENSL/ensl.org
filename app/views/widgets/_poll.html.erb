<% if @current_action == "news_index" %>
  <div class="widget poll">
    <h4><%= t('widget.poll') %></h4>
    <div class="body">
      <div class="content">
        <% @poll = Poll.first(order: "created_at DESC") %>
        <%= render(partial: "polls/show") if @poll %>
      </div>
    </div>
  </div>
<% end %>