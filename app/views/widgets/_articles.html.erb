<div class="header">Latest articles</div>
<div class="body">
  <div class="content">
    <h3>
      Latest articles
    </h3>
    <ul>
      <% Article.articles.nodrafts.nospecial.recent.each do |article| %>
        <li class="<%= 'bold' if cuser and !cuser.have_read? article %>">
          <%= namelink article %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

