<h1>New team</h1>

<div class="wide box">
  <%= form_for(@team) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :irc %><br />
      <%= f.text_field :irc %>
    </p>
    <p>
      <%= f.label :web %><br />
      <%= f.text_field :web %>
    </p>
    <p>
      <%= f.label :tag %><br />
      <%= f.text_field :tag %>
    </p>
    <p>
      <%= f.label :country %><br />
      <%= country_code_select :team, :country %>
    </p>
    <p>
      <%= f.label :comment %><br />
      <%= f.text_field :comment %>
    </p>
    <p>
      <%= f.submit "Create" %>
    </p>
  <% end %>
</div>

<%= link_to 'Back', teams_path %>
